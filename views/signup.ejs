<!DOCTYPE html>
<html lang="en">
  <%- include ('include/head'); %>

  <body>
    <%- include ('include/navbar'); %>
    <div id="" class="container">
      <!-- sign up starts here -->
      <div class="card card-login mx-auto mt-5 mb-5">
        <div class="card-header">Signup</div>

        <div class="card-body">
          <form method="" id="signupForm">
            <!-- name -->
            <div class="form-group mt-3">
              <div class="form-label-group">
                <label for="name" class="text-capitalize">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  placeholder="Enter your name.."
                  value=""
                  autofocus
                />
              </div>
            </div>

            <!-- phone -->
            <div class="form-group mt-3">
              <div class="form-label-group">
                <label for="name" class="text-capitalize">Phone</label>
                <input
                  type="tel"
                  class="form-control"
                  id="phone"
                  name="phone"
                  placeholder="Enter your phone.."
                  value=""
                />
              </div>
            </div>

            <!-- email -->
            <div class="form-group mt-3">
              <div class="form-label-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Enter your email.."
                  value=""
                  autocomplete="email"
                />
              </div>
            </div>

            <!-- password -->
            <div class="form-group mt-3">
              <div class="form-label-group">
                <label for="password" class="text-capitalize">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Enter your password.."
                />
              </div>
            </div>

            <!-- bio -->
            <div class="form-group mt-3">
              <div class="form-label-group">
                <label for="user description" class="text-capitalize"
                  >Bio</label
                >
                <textarea
                  class="form-control"
                  id="bio"
                  name="bio"
                  rows="3"
                  placeholder="Enter your bio.."
                ></textarea>
              </div>
            </div>

            <!-- button -->
            <button
              type="submit"
              class="btn btn-primary btn-block mt-3"
              name="submit"
              value="submit"
            >
              Save
            </button>
          </form>
          <!-- form ends here -->
        </div>

        <div class="text-center mb-1">
          <a class="d-block small mt-3 text-capitalize" href="/login">Login</a>
        </div>
      </div>
    </div>
  </body>

  <%- include ('include/footer'); %>
</html>
